{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["esnext"],
        "outDir": "dist",
        "rootDir": "src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "~/types/*": ["src/types/*"],
            "~/functions/*": ["src/functions/*"],
            "~/utils/*": ["src/utils/*"],
            "~/validators/*": ["src/validators/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts", "src/**/*.test.ts"],
    "exclude": ["node_modules"]
}
